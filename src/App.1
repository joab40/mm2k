/**********************
 * Sm√• hj√§lpfunktioner *
 **********************/
const ACCOUNTS_KEY = "mm2k_accounts_v1";            // lista √∂ver profiler
const CURRENT_ACCOUNT_KEY = "mm2k_current_account_v1"; // aktiv profil-id
const LEGACY_USERS_KEY = "mm2k_users_v1";           // gammal global lagring (migreras vid behov)
const kgStepDefault = 2.5;

function uid() { return Math.random().toString(36).slice(2, 10); }
function roundToStep(value, step = kgStepDefault) { if (!Number.isFinite(value)) return 0; return Math.round(value / step) * step; }
function clamp(n, min, max) { return Math.max(min, Math.min(max, n)); }

function getUsersStorageKey(accountId) {
  return `mm2k_users_v1_${accountId || "default"}`;
}

function loadAccounts() {
  try {
    const raw = localStorage.getItem(ACCOUNTS_KEY);
    const arr = raw ? JSON.parse(raw) : [];
    return Array.isArray(arr) ? arr : [];
  } catch { return []; }
}
function saveAccounts(accounts) {
  localStorage.setItem(ACCOUNTS_KEY, JSON.stringify(accounts));
}

function migrateLegacyUsersIfAny(accountId) {
  try {
    const legacy = localStorage.getItem(LEGACY_USERS_KEY);
    const key = getUsersStorageKey(accountId);
    if (legacy && !localStorage.getItem(key)) {
      localStorage.setItem(key, legacy);
    }
  } catch {}
}

function loadUsersForAccount(accountId) {
  try {
    if (!accountId) return [];
    migrateLegacyUsersIfAny(accountId);
    const raw = localStorage.getItem(getUsersStorageKey(accountId));
    const parsed = raw ? JSON.parse(raw) : [];
    return Array.isArray(parsed) ? parsed : [];
  } catch { return []; }
}
function saveUsersForAccount(accountId, users) {
  if (!accountId) return;
  localStorage.setItem(getUsersStorageKey(accountId), JSON.stringify(users));
}

