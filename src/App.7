  // Projected end-of-cycle 1RM (MM2K: base goal ‚âà 115% of start + realized FT delta ¬± remaining)
  const projected = useMemo(() => {
    if (!selected) return null;
    const FT_IDS = [5,7,9,11,13];
    const baseGoalKg = roundToStep(selected.oneRmKg * 1.15, 0.5); // ‚âà115% av start
    let realizedDeltaKg = 0; let completed = 0;
    for (const id of FT_IDS) {
      const log = selected.logs?.[id];
      if (log?.done) { completed++; const r = Number(log.failureReps); if (Number.isFinite(r)) realizedDeltaKg += (r >= 8 ? +2.5 : (r <= 3 ? -2.5 : 0)); }
    }
    const remaining = FT_IDS.length - completed;
    const point = roundToStep(baseGoalKg + realizedDeltaKg, 0.5);
    const min = roundToStep(point - 2.5 * remaining, 0.5);
    const max = roundToStep(point + 2.5 * remaining, 0.5);
    return { min, max, point, delta: realizedDeltaKg, remaining };
  }, [selected]);

  // Helpers: default logging
  function ensureDefaultSetsForRows(log, rows, failureRepsVal) {
    return rows.map((r, idx) => {
      const existing = log?.sets?.[idx] || {};
      const actualKg = Number.isFinite(existing.actualKg) ? existing.actualKg : r.targetKg;
      let reps;
      if (Number.isFinite(existing.reps)) reps = existing.reps;
      else if (typeof r.reps === "number") reps = r.reps;
      else if (r.kind === "failure") reps = Number.isFinite(failureRepsVal) ? Number(failureRepsVal) : 0;
      else reps = 0;
      return { actualKg, reps };
    });
  }

  // Logging and locking
  function writeLog(workoutId, newEntry) {
    if (!selected) return; const prev = selected.logs?.[workoutId] || { sets: [], done: false }; updateSelected({ logs: { ...selected.logs, [workoutId]: { ...prev, ...newEntry } } });
  }

  function markDone(workoutId, done = true, options = {}) {
    if (!selected) return; const prev = selected.logs?.[workoutId] || { sets: [], done: false };
    if (done && !prev.done) {
      const rowsNow = options.forceRows || buildWorkoutPrescription(workoutId, selected.workingRmKg, selected.rounding);
      const setsWithDefaults = ensureDefaultSetsForRows(prev, rowsNow, prev.failureReps);
      writeLog(workoutId, { ...prev, sets: setsWithDefaults, done: true, doneAt: new Date().toISOString(), lockedRmKg: selected.workingRmKg, lockedRounding: selected.rounding, lockedRows: rowsNow });
    } else if (!done && prev.done) {
      const { lockedRmKg, lockedRounding, lockedRows, doneAt, ...rest } = prev; writeLog(workoutId, { ...rest, done: false });
