/*********************************************
 * Percent progression tuned to MM2K outcome *
 * Aim: #14 peak ‚âà 115% of start 1RM, negatives >110%.
 *********************************************/
function getPercentsForWorkout(w) {
  const P = {
    1:  [0.60, 0.70, 0.80],
    2:  [0.70, 0.80, 0.90],      // single-dag (single weight ~p3)
    3:  [0.65, 0.75, 0.85],
    4:  [0.75, 0.85, 1.00],      // single-dag
    5:  [0.70, 0.80, 0.85],      // Failure Test (anv√§nder p2)
    6:  [0.85, 0.95, 1.10],      // Negative ~110%
    7:  [0.75, 0.85, 0.90],      // Failure Test
    8:  [0.90, 0.97, 1.12],      // Negative ~112%
    9:  [0.76, 0.88, 0.92],      // Failure Test
    10: [0.92, 0.98, 1.13],      // Negative ~113%
    11: [0.78, 0.90, 0.95],      // Failure Test
    12: [0.95, 1.00, 1.05],      // single-dag
    13: [0.80, 0.92, 0.97],      // Failure Test
    14: [1.00, 1.08, 1.15],      // Max-test ‚âà115% av start
  };
  return P[w] || [0.7, 0.8, 0.9];
}

const KG_STEP_DEFAULT = 2.5; // you can change per user
function roundToStep(value, step = KG_STEP_DEFAULT) { if (!Number.isFinite(value)) return 0; return Math.round(value / step) * step; }
function kg(v) { return Number.isFinite(v) ? v : 0; }

function buildWorkoutPrescription(workoutId, workingRmKg, rounding = KG_STEP_DEFAULT) {
  const [p1, p2, p3] = getPercentsForWorkout(workoutId);
  const blocks = WORKOUTS.find(w => w.id === workoutId)?.blocks || [];
  const weights = [ roundToStep(kg(workingRmKg) * p1, rounding), roundToStep(kg(workingRmKg) * p2, rounding), roundToStep(kg(workingRmKg) * p3, rounding) ];
  const rows = [];
  blocks.forEach((b, i) => {
    const base = (b.kind === "failure" ? weights[1] : weights[i]); // FT anv√§nder p2‚Äëvikten
    const label = b.kind === "failure" ? "Failure Test" : b.kind === "negative" ? "Negative only" : b.kind === "max" ? "Max Test" : b.kind === "single" ? "Single" : "Work";
    for (let s = 0; s < b.sets; s++) rows.push({ kind: b.kind, label, reps: b.reps, targetKg: base });
  });
  return rows;
}

/***************************
 * Failure adjustments etc. *
 ***************************/
function applyFailureAdjustment(currentRmKg, testWeightKg, achievedReps) {
  if (!Number.isFinite(achievedReps)) return currentRmKg;
  if (achievedReps >= 8) return roundToStep(currentRmKg + 2.5, 0.5); // ‚âà +5 lb
  if (achievedReps <= 3) return roundToStep(Math.max(0, currentRmKg - 2.5), 0.5); // ‚âà -5 lb
  return currentRmKg;
}

