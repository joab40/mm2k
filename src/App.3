];

/*********************************************
 * Percent approximation of MM2K progression *
 *********************************************/
function getPercentsForWorkout(w) {
  switch (w) {
    case 1:  return [0.66, 0.74, 0.793];
    case 2:  return [0.724, 0.81, 0.897];
    case 3:  return [0.68, 0.76, 0.81];
    case 4:  return [0.76, 0.86, 0.94];
    case 5:  return [0.74, 0.845, 0.845];
    case 6:  return [0.83, 0.92, 1.08];
    case 7:  return [0.75, 0.86, 0.86];
    case 8:  return [0.86, 0.95, 1.10];
    case 9:  return [0.76, 0.875, 0.875];
    case 10: return [0.88, 0.97, 1.12];
    case 11: return [0.77, 0.89, 0.89];
    case 12: return [0.92, 0.98, 1.00];
    case 13: return [0.78, 0.905, 0.905];
    case 14: return [0.95, 1.00, 1.02];
    default: return [0.7, 0.8, 0.9];
  }
}

const KG_STEP_DEFAULT = 2.5;
function roundToStep(value, step = KG_STEP_DEFAULT) { if (!Number.isFinite(value)) return 0; return Math.round(value / step) * step; }
function kg(v) { return Number.isFinite(v) ? v : 0; }

function buildWorkoutPrescription(workoutId, oneRmKg, rounding = KG_STEP_DEFAULT) {
  const [p1, p2, p3] = getPercentsForWorkout(workoutId);
  const blocks = WORKOUTS.find(w => w.id === workoutId)?.blocks || [];
  const weights = [ roundToStep(kg(oneRmKg) * p1, rounding), roundToStep(kg(oneRmKg) * p2, rounding), roundToStep(kg(oneRmKg) * p3, rounding) ];
  const rows = [];
  blocks.forEach((b, i) => {
    // Failure test should always use block #2 weight (p2)
    const base = (b.kind === "failure" ? weights[1] : weights[i]);
    const label = b.kind === "failure" ? "Failure Test" : b.kind === "negative" ? "Negative only" : b.kind === "max" ? "Max Test" : b.kind === "single" ? "Single" : "Work";
    for (let s = 0; s < b.sets; s++) {
      rows.push({ kind: b.kind, label, reps: b.reps, targetKg: base, note: b.kind === "failure" ? "AMRAP with block #2 weight" : "" });
    }
  });
  return rows;
}

/***************************
 * Failure adjustments etc. *
 ***************************/
function applyFailureAdjustment(currentRmKg, testWeightKg, achievedReps) {
  if (!Number.isFinite(achievedReps)) return currentRmKg;
  if (achievedReps >= 8) return roundToStep(currentRmKg + 2.5, 0.5);
  if (achievedReps <= 3) return roundToStep(Math.max(0, currentRmKg - 2.5), 0.5);
  return currentRmKg;
}
function epley1RM(weightKg, reps) {
  if (!Number.isFinite(weightKg) || !Number.isFinite(reps) || reps < 1) return weightKg;
  return weightKg * (1 + reps / 30);
}

