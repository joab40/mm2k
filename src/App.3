import React, { useEffect, useMemo, useState } from "react";

// MM2K (Muscle Media 2000) Bench Program - 6 weeks, 14 workouts
// Single-file React app (App.jsx). Tailwind classes used for styling.
// Features:
// - Local-first profiles (simple "login") with optional PIN, stored in localStorage
// - Multiple lifters (users) inside each profile
// - Workout plan matching MM2K structure: 14 workouts with failure tests and negative-only days
// - Weights in KG (percent approximation calibrated to MM2K examples)
// - Set/reps logging, mark workout done (locks that workout so later 1RM changes do not alter past data)
// - Failure Test confirm panel proposes +/-2.5 kg change; no auto change without confirm
// - Projected end-of-cycle 1RM range shown in profile card
// - Export/Import profile data (JSON)

/************************
 * Local storage helpers *
 ************************/ 
const ACCOUNTS_KEY = "mm2k_accounts_v1";             // array of {id,label,pin,createdAt}
const CURRENT_ACCOUNT_KEY = "mm2k_current_account_v1"; // string id
const LEGACY_USERS_KEY = "mm2k_users_v1";             // old global users store

function uid() { return Math.random().toString(36).slice(2, 10); }

function getUsersStorageKey(accountId) {
  return `mm2k_users_v1_${accountId || "default"}`;
}

function loadAccounts() {
  try { const raw = localStorage.getItem(ACCOUNTS_KEY); const arr = raw ? JSON.parse(raw) : []; return Array.isArray(arr) ? arr : []; } catch { return []; }
}
function saveAccounts(accounts) { localStorage.setItem(ACCOUNTS_KEY, JSON.stringify(accounts)); }

function migrateLegacyUsersIfAny(accountId) {
  try {
    const legacy = localStorage.getItem(LEGACY_USERS_KEY);
    const key = getUsersStorageKey(accountId);
    if (legacy && !localStorage.getItem(key)) {
      localStorage.setItem(key, legacy);
    }
  } catch {}
}

function loadUsersForAccount(accountId) {
  try {
    if (!accountId) return [];
    migrateLegacyUsersIfAny(accountId);
    const raw = localStorage.getItem(getUsersStorageKey(accountId));
    const parsed = raw ? JSON.parse(raw) : [];
    return Array.isArray(parsed) ? parsed : [];
  } catch { return []; }
}
function saveUsersForAccount(accountId, users) {
  if (!accountId) return;
  localStorage.setItem(getUsersStorageKey(accountId), JSON.stringify(users));
}

